@model CrudJeudi.Context.customer
@{
    ViewBag.Title = "Customer";
}
<style>
    .error{
        color:red;
    }
</style>
<h2>Customer</h2>

@using (Html.BeginForm("AddCustomer", "Customer", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor( m => m.Id)
        <label>Prénom</label>
        @Html.ValidationMessageFor(v => v.firstname, "prenom obligatoire", new { @class = "error" })
        @Html.TextBoxFor(M => M.firstname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Nom</label>
        @Html.TextBoxFor(M => M.lastname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.ValidationMessageFor(v => v.email, "", new { @class = "error" })
        @Html.TextBoxFor(M => M.email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Telephone</label>
        @Html.TextBoxFor(M => M.mobile, new { @class = "form-control" })
    </div>

    <button class="btn btn-primary" type="submit">
        Enregistrer
    </button>
}
